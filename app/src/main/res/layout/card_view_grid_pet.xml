<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPetGrid"
    android:layout_width="@dimen/card_view"
    android:layout_height="@dimen/card_view"
    android:layout_marginBottom= "@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radios_cardview"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/imgFotoGrid"
            android:layout_width="@dimen/image_cardview"
            android:layout_height="@dimen/image_cardview"
            android:src="@drawable/dog_1"
            />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tvLikesGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/praite"
                        android:textSize="@dimen/text_likes_size"
                        />
                    <ImageView
                        android:id="@+id/imgBoneGrid"
                        android:layout_width="@dimen/image_bone"
                        android:layout_height="@dimen/image_bone"
                        android:src="@drawable/dog_bone_48"/>




        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>